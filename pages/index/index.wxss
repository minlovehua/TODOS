/**index.wxss**/
.container{
  border-top: 1rpx solid #e0e0e0;
}

.search{
  display: flex;
  align-items: center;
  margin: 20rpx 20px 0 20rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.search image{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;  
}

.todos{
  margin: 20rpx 20px 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 100rpx #e0e0e0;
}

.todos .item{
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.todos .item:last-child{
  border-bottom: 0;
}

.todos .item text{
  flex: 1;
  margin-left: 20rpx;
  font-size: 30rpx;
  color:#444;
}

.footer{
  display: flex;
  justify-content: space-between;
  margin: 20rpx 20px 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.todos .item.completed text{
  color:#888;
  text-decoration: line-through;
}

.tip{
  margin: 20rpx;
}
